# Required
METACULUS_TOKEN=1234567890

# Optional
OPENROUTER_API_KEY=1234567890
PERPLEXITY_API_KEY=1234567890
OPENAI_API_KEY=1234567890
EXA_API_KEY=1234567890
ASKNEWS_CLIENT_ID=1234567890
ASKNEWS_SECRET=1234567890
ANTHROPIC_API_KEY=1234567890

# AskNews Enable/Disable (optional, defaults to false)
# Set to true, 1, on, or yes to enable AskNews calls
# When disabled (false/0/off/no), the bot skips all AskNews network requests and continues with empty fact lists
ASKNEWS_ENABLED=false

# OpenRouter Debug Mode (optional, defaults to false)
# Set to true, 1, on, or yes to enable verbose OpenRouter request/response logging
# When enabled, logs detailed request parameters, response headers, and saves debug artifacts to cache/
# Artifacts include: cache/debug_llm_*_request.json and cache/debug_llm_*_response.json
# Authorization headers are stripped from saved artifacts for security
OPENROUTER_DEBUG=false

# OpenRouter Model Override (optional, defaults to openai/gpt-4o-mini)
# Specify which model to use for OpenRouter API calls
# Examples: openai/gpt-4o-mini, openai/gpt-5-nano, anthropic/claude-3-opus, etc.
OPENROUTER_MODEL=openai/gpt-4o-mini

# OpenRouter Reasoning Disable (optional, defaults to false)
# Set to true to disable reasoning output for models that support it (e.g., gpt-5-*)
# Automatically enabled for gpt-5-* models to prevent empty content in JSON mode
# Set to true, 1, on, or yes to force disable reasoning for all models
OPENROUTER_DISABLE_REASONING=false

# World Date Override (optional)
# Force a specific date for world generation scenarios (format: YYYY-MM-DD)
# If not set, the bot will infer the date from the question or use current_year + 5
# Example: 2030-07-01
WORLD_DATE=

# World JSON Hint Enable/Disable (optional, defaults to true)
# Set to true, 1, on, or yes to append minimal JSON format hints to world prompts
# Set to false, 0, off, or no to use raw world prompt only (no JSON hints)
# When enabled: appends one-line hints like {"answer": true} or {"scores": {...}}
# When disabled: gives complete control over prompting without code edits
WORLD_JSON_HINT_ENABLED=true

# World Max Tokens (optional, defaults to 700)
# Maximum number of tokens for world generation LLM calls
# Increase if world_summary responses are truncated mid-JSON
# Default 700 allows ~180-200 word summaries plus JSON fields
WORLD_MAX_TOKENS=700
